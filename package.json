{
  "name": "hw-license-center",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:node": "tsx watch src/server.node.ts",
    "deploy": "wrangler deploy --minify",
    "start": "tsx src/server.node.ts",
    "build:node": "esbuild src/server.node.ts --bundle --platform=node --target=node18 --outfile=dist/server.js",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "esbuild": "^0.27.3",
    "hono": "^4.12.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260302.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.3.2",
    "@vitest/ui": "^4.0.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.4.0"
  }
}